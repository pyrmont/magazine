---
pageable: true
per_page: 10
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
    <article>

        <h1 class="<%= article.data.category.downcase %>"><a href="<%= article.url %>"><%= article.title %></a></h1>

        <%= article.body %>
    
        <time><a href="<%= article.url %>"><%= article.date.strftime('%A, %e %B %Y') %></a></time>
    
    </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>